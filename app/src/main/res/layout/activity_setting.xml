<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashname"
    tools:context="com.comicflix.Profile.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/backPressed"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_again"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="App Settings"
                android:textColor="@color/GhostWhite"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cellular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/backPressed"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Video Playback"
                android:textColor="@color/GhostWhite"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:fontFamily="@font/montserrat_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGreyBackground"
                android:padding="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cellular"/>


                <LinearLayout
                    android:id="@+id/appSettingsID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="5dp"
                        android:text="App Settings"
                        android:textColor="@color/GhostWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:text="Automatic"
                        android:textColor="@color/GhostWhite"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/notificationSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/cellular"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Notification"
                    android:textColor="@color/GhostWhite"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkGreyBackground"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/alarm"/>


                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:text="Allow Notification"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <Switch
                            android:id="@+id/allowNotify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/about_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/backPressed"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="About"
                    android:textColor="@color/GhostWhite"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <LinearLayout
                    android:id="@+id/deviceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkGreyBackground"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/phone"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:text="Device"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />

                        <TextView
                            android:id="@+id/aboutDevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:padding="2dp"
                            android:text="Spec"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkGreyBackground"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/person"/>


                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:text="Account"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />

                        <TextView
                            android:id="@+id/emailAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:padding="2dp"
                            android:text="Email: "
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:gravity="center_vertical"
                        >

                       <ImageView
                           android:id="@+id/changeAcct"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/change_acc"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Diagnostic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/backPressed"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Diagnostic"
                    android:textColor="@color/GhostWhite"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <LinearLayout
                    android:id="@+id/networkChecking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkGreyBackground"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/network_check"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="7dp"
                            android:text="Check Network"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/accountPlayback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkGreyBackground"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/playback_spec"/>


                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:text="Playback Specification"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />


                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/speedTestID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkGreyBackground"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/network_check"/>


                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="7dp"
                            android:text="Check Network"
                            android:textColor="@color/GhostWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/speedTest"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/change_acc"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
